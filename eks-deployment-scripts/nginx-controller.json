{
   "kind": "ReplicationController",
   "apiVersion": "v1",
   "metadata": {
      "name": "nginxApp",
      "labels": {
         "app": "nginxApp"
      }
   },
   "spec": {
      "replicas": 1,
      "selector": {
         "app": "nginxApp"
      },
      "template": {
         "metadata": {
            "labels": {
               "app": "nginxApp"
            }
         },
         "spec": {
            "containers": [
               {
                  "name": "nginxApp",
                  "image": "mogueye87/simple-webapp",
                  "ports": [
                     {
                        "name": "http-server",
                        "containerPort": 80
                     }
                  ]
               }
            ]
         }
      }
   }
}