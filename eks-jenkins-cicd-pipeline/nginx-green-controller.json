{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"simple-nginx-app",
      "labels":{
         "app":"simple-nginx-app",
         "role":"master"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "app":"simple-nginx-app",
         "role":"master"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"simple-nginx-app",
               "role":"master"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"nginx",
                  "image":"mogueye87/simple-nginx-app:latest",
                  "ports":[
                     {
                        "name":"http-server",
                        "containerPort":8080
                     }
                  ]
               }
            ]
         }
      }
   }
}